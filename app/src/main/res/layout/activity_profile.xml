<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/jCatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Category"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/jCatSel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None Selected"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jCatTitle"
        app:layout_constraintVertical_bias="0"/>

    <Spinner
        android:id="@+id/jCatDrpDwn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        android:layout_margin="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jCatSel"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/jCompTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jCatDrpDwn"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/jCompSel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="None Selected"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jCompTitle"
        app:layout_constraintVertical_bias="0" />

    <EditText
        android:id="@+id/jCompET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:layout_margin="18dp"
        android:hint="Enter a company"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jCompSel"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/upProButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="42dp"
        android:text="@string/updatePro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jCompET" />

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="12dp"
        android:text="@string/goBack"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upProButton" />

</androidx.constraintlayout.widget.ConstraintLayout>